	</definition>
	
	<!-- PACMAN PAGE -->
	<definition name="tutran.pacman.tile" extends="tutran.template.nofooter">
		<put-attribute name="body" value="/jsp/pacman/pacman.jsp" />
		<put-attribute name="title" value="Pac-Man" />
		<put-list-attribute name="styles" inherit="true">
			<add-attribute value="/style/pacman/pacman.css" />
		</put-list-attribute>
		<put-list-attribute name="scripts" inherit="true">
			<add-attribute value="/script/pacman/pacman.js" />
