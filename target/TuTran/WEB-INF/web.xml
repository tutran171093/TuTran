<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" 
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 	
 	<display-name>Archetype Created Web Application</display-name>
 	
 	<listener>
	    <listener-class>org.apache.tiles.extras.complete.CompleteAutoloadTilesListener</listener-class>
	</listener>
 		
	<servlet>
	    <servlet-name>Tiles Dispatch Servlet</servlet-name>
	    <servlet-class>org.apache.tiles.web.util.TilesDispatchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>IndexServlet</servlet-name>
		<display-name>IndexServlet</display-name>
		<description></description>
		<servlet-class>controller.IndexServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>ArticleListServlet</display-name>
		<servlet-name>ArticleListServlet</servlet-name>
		<servlet-class>controller.article.ArticleListServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>ArticleDetailServlet</display-name>
		<servlet-name>ArticleDetailServlet</servlet-name>
		<servlet-class>controller.article.ArticleDetailServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>BoxMovingServlet</display-name>
		<servlet-name>BoxMovingServlet</servlet-name>
		<servlet-class>controller.learning.javascript.BoxMovingServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>PacManServlet</display-name>
		<servlet-name>PacManServlet</servlet-name>
		<servlet-class>controller.pacman.PacManServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>Tiles Dispatch Servlet</servlet-name>
	    <url-pattern>*.tile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/IndexServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ArticleListServlet</servlet-name>
		<url-pattern>/ArticleListServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ArticleDetailServlet</servlet-name>
		<url-pattern>/ArticleDetailServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BoxMovingServlet</servlet-name>
		<url-pattern>/BoxMovingServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PacManServlet</servlet-name>
		<url-pattern>/PacManServlet</url-pattern>
	</servlet-mapping>
	
  <display-name>Archetype Created Web Application</display-name>

</web-app>
